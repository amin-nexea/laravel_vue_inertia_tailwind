{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "types": ["node", "vite/client"],
      "allowJs": true,
      "jsx": "preserve"
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.d.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.vue",
      "resources/js/shims-vue.d.ts"
    ],
    "exclude": ["node_modules"]
  }